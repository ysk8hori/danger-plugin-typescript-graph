{
  "name": "danger-plugin-typescript-graph",
  "description": "Visualize the dependencies between files in the TypeScript code base.",
  "author": {
    "name": "ysk8hori",
    "email": "ysk8.hori@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ysk8hori/danger-plugin-typescript-graph.git"
  },
  "bugs": {
    "url": "https://github.com/ysk8hori/danger-plugin-typescript-graph/issues"
  },
  "homepage": "https://github.com/ysk8hori/danger-plugin-typescript-graph#readme",
  "keywords": [
    "danger",
    "danger-plugin",
    "typescript-graph"
  ],
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "build": "tsc",
    "test": "jest",
    "predocs": "rm -rf docs/",
    "docs": "esdoc -c .esdoc.json",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "prettier": "prettier",
    "prettier-write": "npm run prettier -- --parser typescript --no-semi --trailing-comma es5 --write --print-width 120",
    "prettier-project": "npm run prettier-write -- 'src/**/*.{ts,tsx}'",
    "lint": "tslint \"src/**/*.ts\""
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "ts-jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "tslint": "^5.4.3",
    "danger": "*",
    "commitizen": "^4.0.0",
    "cz-conventional-changelog": "^3.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^1.3.1",
    "semantic-release": "^6.3.6",
    "typescript": "^2.3.2",
    "validate-commit-msg": "^2.12.1"
  },
  "optionalDependencies": {
    "esdoc": "^1.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "tslint --fix",
      "npm run prettier-write --",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  }
}
