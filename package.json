{
  "name": "danger-plugin-typescript-graph",
  "description": "Visualize the dependencies between files in the TypeScript code base.",
  "author": {
    "name": "ysk8hori",
    "email": "ysk8.hori@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ysk8hori/danger-plugin-typescript-graph.git"
  },
  "bugs": {
    "url": "https://github.com/ysk8hori/danger-plugin-typescript-graph/issues"
  },
  "homepage": "https://github.com/ysk8hori/danger-plugin-typescript-graph#readme",
  "keywords": [
    "danger",
    "danger-plugin",
    "typescript-graph"
  ],
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "predocs": "rm -rf docs/",
    "docs": "esdoc -c .esdoc.json",
    "semantic-release": "semantic-release",
    "prettier": "prettier --write ./src",
    "lint:fix": "eslint --fix src",
    "lint": "eslint \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "danger": "*",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "semantic-release": "^21.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3",
    "validate-commit-msg": "^2.12.1"
  },
  "optionalDependencies": {
    "esdoc": "^1.1.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "eslint --fix",
      "npm run prettier --",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "@ysk8hori/typescript-graph": "0.11.4",
    "remeda": "^1.12.0",
    "zod": "3.21.4"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
